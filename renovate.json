{
  "packageRules": [
    {
      "matchBaseBranches": [
        "/^release.*/",
        "main"
      ],
      "matchManagers": [
        "gomod",
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "all non-major dependencies",
      "automerge": true
    },
    {
      "matchBaseBranches": [
        "main"
      ],
      "matchManagers": [
        "gomod",
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "all go major dependencies"
    }
  ],
  "autoApprove": true,
  "tekton": {
    "fileMatch": [
      "\\.tekton/.*\\.yaml$"
    ],
    "automerge": true,
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "enabled": true,
    "platformAutomerge": true
  }
}
