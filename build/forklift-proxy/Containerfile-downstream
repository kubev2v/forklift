FROM registry.redhat.io/ubi9/go-toolset:1.24.4-1752083840 AS builder
USER 0
WORKDIR /app
COPY --chown=1001:0 ./ ./
ENV GOFLAGS="-mod=vendor -tags=strictfipsruntime"
ENV GOEXPERIMENT=strictfipsruntime
ENV GOCACHE=/go-build/cache
RUN --mount=type=cache,target=${GOCACHE},uid=1001 GOOS=linux GOARCH=amd64 go build -buildvcs=false -ldflags="-w -s" -o proxy github.com/kubev2v/forklift/cmd/forklift-proxy

FROM registry.redhat.io/ubi9-minimal:9.6-1752587672

# RUN microdnf -y update && microdnf -y clean all
# Required to be able to get files from within the pod

COPY --from=builder /app/proxy /usr/local/bin/forklift-proxy
ENTRYPOINT ["/usr/local/bin/forklift-proxy"]

ARG MTV_VERSION
ARG REGISTRY
ARG REVISION
ARG CPE

LABEL \
    com.redhat.component="mtv-forklift-proxy-container" \
    name="${REGISTRY}/mtv-forklift-proxy-rhel9" \
    license="Apache License 2.0" \
    io.k8s.display-name="Migration Toolkit for Virtualization" \
    io.k8s.description="Migration Toolkit for Virtualization - Forklift Proxy" \
    io.openshift.tags="migration,mtv,forklift" \
    description="Migration Toolkit for Virtualization - Forklift Proxy" \
    summary="Migration Toolkit for Virtualization - Forklift Proxy" \
    vendor="Red Hat, Inc." \
    maintainer="Migration Toolkit for Virtualization Team <migtoolkit-virt@redhat.com>" \
    version="$MTV_VERSION" \
    cpe="cpe:/a:redhat:migration_toolkit_virtualization:${CPE}::el9" \
    revision="$REVISION"
