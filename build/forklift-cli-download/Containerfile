# Build stage
FROM registry.access.redhat.com/ubi9/go-toolset:1.25.3-1766449309 AS builder

USER 0
WORKDIR /app
COPY --chown=1001:0 ./ ./
ENV GOFLAGS="-mod=vendor"
ENV GOCACHE=/go-build/cache

# Change to kubectl-mtv directory and build all platform binaries
WORKDIR /app/cmd/kubectl-mtv
RUN --mount=type=cache,target=${GOCACHE},uid=1001 make build-all

# Nginx serving stage  
FROM registry.access.redhat.com/ubi9/nginx-126:1-1769459018

# Copy binaries directly from build stage
COPY --from=builder /app/cmd/kubectl-mtv/bin /opt/app-root/src/

EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]

LABEL \
        com.redhat.component="mtv-cli-download-container" \
        name="migration-toolkit-virtualization/mtv-cli-download-rhel9" \
        license="Apache License 2.0" \
        io.k8s.display-name="Migration Toolkit for Virtualization" \
        io.k8s.description="Migration Toolkit for Virtualization - CLI Download Service" \
        io.openshift.tags="migration,mtv,forklift,cli" \
        summary="Migration Toolkit for Virtualization - CLI Download Service" \
        description="Migration Toolkit for Virtualization - CLI Download Service" \
        vendor="Red Hat, Inc." \
        maintainer="Migration Toolkit for Virtualization Team <migtoolkit-virt@redhat.com>"
