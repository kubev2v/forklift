FROM registry.access.redhat.com/ubi9/go-toolset:1.24.4-1753221510 AS builder
USER root
WORKDIR /usr/src/app

# Make python available in the builder image ( o/w only python3 is available )
RUN dnf install -y python && dnf clean all && rm -rf /var/cache/dnf

# pre-copy/cache go.mod for pre-downloading dependencies and only redownloading
# them in subsequent builds if they change
COPY . .
WORKDIR /usr/src/app/cmd/vsphere-copy-offload-populator
RUN go mod download && go mod verify

RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/.cache/go-build \
    make build test

RUN make vmkfstools-wrapper

FROM registry.access.redhat.com/ubi9-minimal:9.6-1752587672

COPY --from=builder /usr/src/app/cmd/vsphere-copy-offload-populator/bin/vsphere-copy-offload-populator \
    /bin/vsphere-copy-offload-populator

COPY --from=builder /usr/src/app/cmd/vsphere-copy-offload-populator/vmkfstools-wrapper/vmkfstools-wrapper.vib \
    /bin/vmkfstools-wrapper.vib
COPY --from=builder /usr/src/app/cmd/vsphere-copy-offload-populator/vmkfstools-wrapper/vib-install-playbook.yaml \
    /bin/vib-install-playbook.yaml
COPY --from=builder /usr/src/app/cmd/vsphere-copy-offload-populator/vmkfstools-wrapper/esxi_hosts.yaml \
    /bin/esxi_hosts.yaml

ENTRYPOINT ["/bin/vsphere-copy-offload-populator"]

LABEL \
        com.redhat.component="mtv-vsphere-copy-offload-populator-container" \
        name="migration-toolkit-virtualization/mtv-vsphere-copy-offload-populator-rhel9" \
        license="Apache License 2.0" \
        io.k8s.display-name="Migration Toolkit for Virtualization" \
        io.k8s.description="Migration Toolkit for Virtualization - vSphere Copy Offload Populator" \
        io.openshift.tags="migration,mtv,forklift" \
        summary="Migration Toolkit for Virtualization - vSphere Copy Offload Populator" \
        description="Migration Toolkit for Virtualization - vSphere Copy Offload Populator" \
        vendor="Red Hat, Inc." \
        maintainer="Migration Toolkit for Virtualization Team <migtoolkit-virt@redhat.com>"




