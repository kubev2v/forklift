# Network policy for Forklift API Service
# Handles webhooks, validation, and API requests
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: forklift-api-policy
  namespace: {{ app_namespace }}
  labels:
    app: {{ app_name }}
spec:
  podSelector:
    matchLabels:
      service: {{ api_service_name }}
  policyTypes:
  - Ingress
  - Egress
  ingress:
  # Allow controller to communicate with API
  - from:
    - podSelector:
        matchLabels:
          control-plane: controller-manager
    ports:
    - protocol: TCP
      port: 8443
{% if not k8s_cluster|bool %}
  # Allow OpenShift Console/UI access
  - from:
    - namespaceSelector:
        matchLabels:
          kubernetes.io/metadata.name: openshift-console
    ports:
    - protocol: TCP
      port: 8443
{% endif %}
  # Allow Kubernetes API server for webhooks
  - ports:
    - protocol: TCP
      port: 8443
{% if not k8s_cluster|bool %}
  # Allow monitoring
  - from:
    - namespaceSelector:
        matchLabels:
          kubernetes.io/metadata.name: openshift-monitoring
    ports:
    - protocol: TCP
      port: 8444  # Services endpoint
{% endif %}
  egress:
  # Allow DNS resolution
  - ports:
    - protocol: UDP
      port: 53
    - protocol: TCP
      port: 53
  # Allow HTTPS (certificates, OCSP, external validation)
  - ports:
    - protocol: TCP
      port: 443
  # Allow Kubernetes API access
  - ports:
    - protocol: TCP
      port: 6443
  # Allow communication with controller
  - to:
    - podSelector:
        matchLabels:
          control-plane: controller-manager
    ports:
    - protocol: TCP
      port: 8081  # Controller metrics/status port
  # Allow communication with validation service
  - to:
    - podSelector:
        matchLabels:
          service: forklift-validation
    ports:
    - protocol: TCP
      port: 8181  # Validation service OPA port




