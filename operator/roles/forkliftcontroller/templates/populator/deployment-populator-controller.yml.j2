---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: {{ populator_controller_deployment_name }}
  namespace: {{ app_namespace }}
spec:
  selector:
    matchLabels:
      app: {{ app_name }}
  template:
    metadata:
      labels:
        app: {{ app_name }}
    spec:
      serviceAccountName: forklift-controller
      containers:
        - name: {{ populator_controller_container_name }}
          image: {{ populator_controller_image_fqin }}
          imagePullPolicy: {{ image_pull_policy }}
          env:
          - name: POD_NAMESPACE
            valueFrom:
                fieldRef:
                  apiVersion: v1
                  fieldPath: metadata.namespace
          - name: OVIRT_POPULATOR_IMAGE
            value: {{ populator_ovirt_image_fqin }}
          - name: OPENSTACK_POPULATOR_IMAGE
            value: {{ populator_openstack_image_fqin }}
          ports:
            - containerPort: 8080
              name: http-endpoint
              protocol: TCP
